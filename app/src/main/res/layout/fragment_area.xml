<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Area">

    <TextView
        android:id="@+id/tv_luas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERHITUNGAN LUAS"
        android:textSize="30sp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_persegi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Persegi"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_luas"
        app:layout_constraintEnd_toStartOf="@+id/btn_segitiga"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_segitiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Segitiga"
        app:layout_constraintEnd_toStartOf="@+id/btn_lingkaran"
        app:layout_constraintStart_toEndOf="@+id/btn_persegi"
        app:layout_constraintTop_toBottomOf="@+id/tv_luas" />

    <Button
        android:id="@+id/btn_lingkaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Lingkaran"
        app:layout_constraintStart_toEndOf="@+id/btn_segitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_luas" />

    <TextView
        android:id="@+id/bentuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="BENTUK"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_segitiga" />


    <TextView
        android:id="@+id/tv_persegi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="Panjang sisi = "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bentuk" />

    <EditText
        android:id="@+id/et_persegi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Isi Panjang Sisi"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_persegi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_persegi"
        app:layout_constraintTop_toTopOf="@+id/tv_persegi" />

    <TextView
        android:id="@+id/tv_alasSegitiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="Alas Segitiga = "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bentuk" />

    <EditText
        android:id="@+id/et_alasSegitiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Isi Panjang Alas Segitiga"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_alasSegitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_alasSegitiga"
        app:layout_constraintTop_toTopOf="@+id/tv_alasSegitiga" />

    <TextView
        android:id="@+id/tv_tinggiSegitiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="Tinggi Segitiga = "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alasSegitiga" />

    <EditText
        android:id="@+id/et_tinggiSegitiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Isi Tinggi Segitiga"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tinggiSegitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_tinggiSegitiga"
        app:layout_constraintTop_toTopOf="@+id/tv_tinggiSegitiga" />

    <TextView
        android:id="@+id/tv_lingkaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="Jari-jari = "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bentuk" />

    <EditText
        android:id="@+id/et_lingkaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Isi Panjang Jari-jari"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lingkaran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_lingkaran"
        app:layout_constraintTop_toTopOf="@+id/tv_lingkaran" />

    <Button
        android:id="@+id/btn_hitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="hitung"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_segitiga"/>

    <TextView
        android:id="@+id/tv_tulisanHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="HASIL"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hitung" />

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:visibility="gone"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/tv_tulisanHasil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>